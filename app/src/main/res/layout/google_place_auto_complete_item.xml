<?xml version="1.0" encoding="utf-8"?>

  <android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
      android:id="@+id/tv_location_adress_main_part"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:padding="2dp"
      android:fontFamily="sans-serif"
      android:textColor="@android:color/black"
      app:layout_constraintBottom_toTopOf="@+id/tv_location_adress_secondary_part"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/tv_location_adress_secondary_part"
    android:textStyle="normal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:padding="2dp"
    android:textColor="@color/browser_actions_title_color"
    android:textSize="12sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_location_adress_main_part"/>


  </android.support.constraint.ConstraintLayout>
